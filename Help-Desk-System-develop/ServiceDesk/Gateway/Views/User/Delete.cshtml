@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewBag.Title = "Usuń użytkownika";
}

<h2>Usuwanie użytkownika</h2>

<h3>Jesteś pewny że chcesz go usunąć?</h3>
<div>
    <h4>@Model.UserName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Usuń" class="btn btn-danger" /> |
            <a asp-action="AdministratorIndex" class="btn btn-secondary">Powrót do listy</a>
        </div>
    </form>
</div>