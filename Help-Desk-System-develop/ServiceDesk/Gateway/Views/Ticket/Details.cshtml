@model Gateway.Storage.Dtos.DetailsTicketDto

@{
    ViewData["Title"] = "Szczegóły";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h4>DetailsTicketDto</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Tytuł</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-2">Opis</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-2">Status</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.StatusName)</dd>

                <dt class="col-sm-2">Priorytet</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.PriorityName)</dd>

                <dt class="col-sm-2">Zgłaszający</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Requester)</dd>

                <dt class="col-sm-2">Przypisane do</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Assignee)</dd>
            </dl>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h4>Zadania <a class="btn btn-success btn-sm" asp-action="CreateTask" asp-route-id="@Model?.Id">Dodaj zadanie</a></h4>
        </div>
        <div class="card-body">
            <ul class="list-group">
                @foreach (var task in Model.Tasks)
                {
                    <li class="list-group-item">
                        <input type="checkbox" /> @Html.DisplayFor(modelItem => task.Content)
                        <a class="btn btn-primary btn-sm ml-2" asp-action="EditTask" asp-route-id="@task?.Id">Edytuj</a>
                        <a class="btn btn-danger btn-sm ml-2" asp-action="DeleteTask" asp-route-id="@task?.Id">Usuń</a>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h4>Notatki <a class="btn btn-success btn-sm" asp-action="CreateNote" asp-route-id="@Model?.Id">Dodaj notatkę</a></h4>
        </div>
        <div class="card-body">
            <ul class="list-group">
                @foreach (var note in Model.Notes)
                {
                    <li class="list-group-item">
                        @Html.DisplayFor(modelItem => note.Content)
                        <a class="btn btn-primary btn-sm ml-2" asp-action="EditNote" asp-route-id="@note?.Id">Edytuj</a>
                        <a class="btn btn-danger btn-sm ml-2" asp-action="DeleteNote" asp-route-id="@note?.Id">Usuń</a>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="mb-4">
        <a class="btn btn-info" asp-action="CreateElements" asp-route-id="@Model?.Id">Dodaj element</a>
        <a class="btn btn-info" asp-action="GetElements" asp-route-id="@Model?.Id">Elementy</a>
        <a class="btn btn-info" asp-action="EditAssignee" asp-route-id="@Model?.Id">Przypisz osobę</a>
        <a class="btn btn-info" asp-action="ChangeStatus" asp-route-id="@Model?.Id">Zmień status</a>
        <a class="btn btn-info" asp-action="ChangePriority" asp-route-id="@Model?.Id">Zmień priorytet</a>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a>
        <a class="btn btn-secondary" asp-action="Index">Wróć do zgłoszeń</a>
    </div>
</div>