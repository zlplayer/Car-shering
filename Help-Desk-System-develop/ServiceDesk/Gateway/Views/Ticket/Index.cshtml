@model IEnumerable<Gateway.Storage.Dtos.TicketDto>

@{
    ViewData["Title"] = "Zgłoszenia";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <p class="text-right">
        <a class="btn btn-success" asp-action="Create">Stwórz zgłoszenie</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Tytuł
                </th>
                <th>
                    Status
                </th>
                <th>
                    Priorytet
                </th>
                <th>
                    Zgłaszający
                </th>
                <th>
                    Przypisane do
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriorityName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Requester)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Assignee)
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
